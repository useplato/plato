{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "sourceMap": true,
    "jsx": "react",
    "target": "ESNext",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "paths": {
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"],
      "@public/*": ["frontend/public/*"],
    },
    "moduleResolution": "bundler",
    "importHelpers": true,
    "baseUrl": "./",
  },
  "include": ["./frontend/**/*"],
  "exclude": ["node_modules", "dist", "build", "out", "public", "server", "potato"]
}

