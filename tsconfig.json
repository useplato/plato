{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths */
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["lib/*"],
      "@potato/*": ["potato/*"],
    }
  },
  "exclude": ["node_modules", "dist", "build", "out", "public", "server", "frontend"]
}
